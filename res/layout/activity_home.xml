<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/home_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:text="ZoneSnap!"
            android:textColor="#00FF26"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/home_slogan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:text="Go places. Share pics."
            android:textColor="#00FF26"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical" >

        <fragment
            android:id="@+id/map"
            android:name="com.zonesnap.zonesnap_app.HomeActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.google.android.gms.maps.SupportMapFragment" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10" >

        <ImageButton
            android:id="@+id/toUploadBtn"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="8"
            android:src="@android:drawable/ic_menu_upload" />

        <ImageButton
            android:id="@+id/toCurrentBtn"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="8"
            android:src="@android:drawable/ic_menu_mylocation" />

        <ImageButton
            android:id="@+id/toPastBtn"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="8"
            android:src="@android:drawable/ic_menu_recent_history" />

        <ImageButton
            android:id="@+id/toProfileBtn"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="8"
            android:src="@android:drawable/ic_menu_myplaces" />
    </LinearLayout>

</LinearLayout>